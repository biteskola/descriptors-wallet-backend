{
  "name": "descriptors-wallet",
  "version": "0.0.1",
  "description": "descriptors, wallet, bitcoin, loopback4, openapi, restapi",
  "keywords": [
    "loopback-application",
    "loopback"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=14.5.0"
  },
  "scripts": {
    "build:watch": "lb-tsc --watch",
    "lint": "npm run eslint && npm run prettier:check",
    "lint:fix": "npm run eslint:fix && npm run prettier:fix",
    "prettier:cli": "lb-prettier \"**/*.ts\" \"**/*.js\"",
    "prettier:check": "npm run prettier:cli -- -l",
    "prettier:fix": "npm run prettier:cli -- --write",
    "eslint": "lb-eslint --report-unused-disable-directives .",
    "eslint:fix": "npm run eslint -- --fix",
    "pretest": "npm run rebuild",
    "premigrate": "npm run build",
    "migrate": "node ./dist/migrate",
    "preopenapi-spec": "npm run build",
    "openapi-spec": "node ./dist/openapi-spec",
    "rebuild": "npm run clean && npm run build",
    "prestart": "npm run rebuild",
    "build": "lb-tsc",
    "test": "NODE_ENV=testing lb-mocha --allow-console-logs dist/__tests__/acceptance/**/*.acceptance.js --timeout 100000000 --exit",
    "test:dev": "npm test && npm run lint:fix",
    "api:build": "docker build -t descriptors-wallet .",
    "api:logs": "docker logs descriptors-wallet_api -f",
    "mongo:build": "docker pull mongo",
    "start": "node -r source-map-support/register .",
    "stop:docker": "docker stop descriptors-wallet_mongo descriptors-wallet_api;docker rm descriptors-wallet_mongo descriptors-wallet_api",
    "start:prod:docker": "docker-compose -f ./config/docker/prod/docker-compose.yml up --build -d",
    "start:dev:docker": "docker-compose -f ./config/docker/dev/docker-compose.yml up --build -d",
    "start:test:docker": "docker-compose -f ./config/docker/test/docker-compose.yml up --build -d;docker exec descriptors-wallet_api npm run test;npm run stop:docker",
    "clean": "lb-clean dist *.tsbuildinfo .eslintcache"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "author": "aitorjs <aitiba@gmail.com>",
  "license": "GPL-3.0",
  "files": [
    "README.md",
    "dist",
    "src",
    "!*/__tests__"
  ],
  "dependencies": {
    "@loopback/authentication": "^8.1.2",
    "@loopback/authorization": "^0.11.2",
    "@loopback/boot": "^4.1.2",
    "@loopback/core": "^3.0.1",
    "@loopback/repository": "^4.0.1",
    "@loopback/rest": "^11.1.2",
    "@loopback/rest-explorer": "^4.1.2",
    "@loopback/security": "^0.7.0",
    "@loopback/service-proxy": "^4.1.2",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.0.0",
    "isemail": "^3.2.0",
    "jsonwebtoken": "^8.5.1",
    "loopback-connector-mongodb": "^6.2.0",
    "loopback-connector-rest": "^4.0.1",
    "loopback4-migration": "^1.3.0",
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@loopback/build": "^8.1.2",
    "@loopback/eslint-config": "^12.0.2",
    "@loopback/testlab": "^4.1.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^18.7.16",
    "eslint": "^8.13.0",
    "source-map-support": "^0.5.21",
    "typescript": "~4.6.3"
  }
}
