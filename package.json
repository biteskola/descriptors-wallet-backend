{
  "name": "btc-explorer",
  "version": "0.0.2",
  "description": "loopback4, openapi, restapi",
  "keywords": [
    "loopback-application",
    "loopback"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=14.5.0"
  },
  "scripts": {
    "build:watch": "lb-tsc --watch",
    "lint": "npm run eslint && npm run prettier:check",
    "lint:fix": "npm run eslint:fix && npm run prettier:fix",
    "prettier:cli": "lb-prettier \"**/*.ts\" \"**/*.js\"",
    "prettier:check": "npm run prettier:cli -- -l",
    "prettier:fix": "npm run prettier:cli -- --write",
    "eslint": "lb-eslint --report-unused-disable-directives .",
    "eslint:fix": "npm run eslint -- --fix",
    "pretest": "npm run rebuild",
    "premigrate": "npm run build",
    "migrate": "node ./dist/migrate",
    "preopenapi-spec": "npm run build",
    "openapi-spec": "node ./dist/openapi-spec",
    "rebuild": "npm run clean && npm run build",
    "prestart": "npm run rebuild",
    "build": "lb-tsc",
    "test": "NODE_ENV=testing lb-mocha --allow-console-logs dist/__tests__/acceptance/**/*.acceptance.js --timeout 100000000 --exit",
    "test:dev": "npm test && npm run lint:fix",
    "api:build": "docker build -t btc-explorer .",
    "api:logs": "docker logs btc-explorer_api_1 -f",
    "mongo:build": "docker pull mongo",
    "start": "node -r source-map-support/register .",
    "stop:docker": "docker stop btc-explorer_mongo_1 btc-explorer_api_1;docker rm btc-explorer_mongo_1 btc-explorer_api_1",
    "start:prod:docker": "docker-compose -f ./config/docker/prod/docker-compose.yml up --build -d",
    "start:dev:docker": "docker-compose -f ./config/docker/dev/docker-compose.yml up --build -d",
    "start:test:docker": "docker-compose -f ./config/docker/test/docker-compose.yml up --build -d;docker exec btc-explorer_api_1 npm run test;npm run stop:docker",
    "clean": "lb-clean dist *.tsbuildinfo .eslintcache"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "author": "aitorjs <aitiba@gmail.com>",
  "license": "GPL-3.0",
  "files": [
    "README.md",
    "dist",
    "src",
    "!*/__tests__"
  ],
  "dependencies": {
    "@loopback/authentication": "^7.3.2",
    "@loopback/authorization": "^0.9.2",
    "@loopback/boot": "^3.4.2",
    "@loopback/core": "^2.16.2",
    "@loopback/repository": "^3.7.1",
    "@loopback/rest": "^10.0.0",
    "@loopback/rest-explorer": "^3.3.2",
    "@loopback/service-proxy": "^3.2.2",
    "bcryptjs": "^2.4.3",
    "dotenv": "^10.0.0",
    "isemail": "^3.2.0",
    "jsonwebtoken": "^8.5.1",
    "loopback-connector-mongodb": "^6.0.1",
    "loopback-connector-rest": "^4.0.1",
    "loopback4-migration": "^1.2.1",
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@loopback/build": "^7.0.0",
    "@loopback/eslint-config": "^11.0.0",
    "@loopback/testlab": "^3.4.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/node": "^16.7.10",
    "eslint": "^7.32.0",
    "source-map-support": "^0.5.19",
    "typescript": "~4.4.2"
  }
}
